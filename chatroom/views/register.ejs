<script type="text/javascript" src="/js/jquery-1.7.2.min.js"></script>
<script>
    $(function(){
        $(".register").click(function(){
            var username = $("#username").val();
            var email = $("#email").val();
            var password = $("#password").val();
            var repassword = $("#repassword").val();

            $.post("/register",{username:username,email:email,password:password,repassword:repassword},function(res){
                if(typeof res == "undefined"){
                    alert("服务器响应502");
                    return false;
                }else if(res['code'] == 1){
                    alert(res.message);
                    location.href = "/chat";
                }else{
                    alert(res.error);
                    return;
                }
            },"json");
        });
    });
</script>