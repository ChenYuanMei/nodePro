<body>
<h1>注册界面</h1>
<div class="log">
	<div class="content2">
		<h2>Sign Up Form</h2>
		<form>
			<input type="text" name="username" value="" id="username"  placeholder="USERNAME">
			<input type="email" name="email" value="" id="email" placeholder="EMAIL ADDRESS">
            <input type="password" name="password" id="password" value="" placeholder="PASSWORD">
			<input type="password" name="repassword" value="" id="repassword" placeholder="REPASSWORD">
			<input type="button" class="register" value="Register">
		</form>
	</div>
	<div class="clear"></div>
</div>
